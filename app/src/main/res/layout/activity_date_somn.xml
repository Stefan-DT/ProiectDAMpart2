<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e29745"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cum ai dormit?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextDataSomn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data Somnului (yyyy-MM-dd)"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editTextOraTrezirii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ora Trezirii (HH:mm)"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editTextDurataSomnului"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Durata Somnului (ore)"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editTextCalitateSomnului"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calitate Somnului (1-10)"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Note"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SalveazÄƒ"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>
</LinearLayout>
